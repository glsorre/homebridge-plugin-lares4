{
  "pluginAlias": "Lares4HomebridgePlugin",
  "pluginType": "platform",
  "singular": true,
  "strictValidation": false,
  "schema": {
    "type": "object",
    "properties": {
      "ip": { "type": "string", "format": "ipv4" },
      "sender": { "type": "string" },
      "pin": { "type": "string" },
      "coverTimeout": { "type": "integer", "minimum": 0 },
      "theromstatManualTimeout": { "type": "integer", "minimum": 0 }
    },
    "required": [ "ip", "pin", "coverTimeout", "thermostatManualTimeout"]
  }
}
